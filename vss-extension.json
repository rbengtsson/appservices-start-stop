{
    "manifestVersion": 1,
    "id": "appservices-start-stop",
    "version": "1.0.0",
    "name": "Azure App Services - Start and Stop",
    "description": "Tasks for starting and stopping an Azure App Service as a part of a VSTS build",
    "public": true,
    "publisher": "rbengtsson",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "scope": [
        "vso.build"
    ],    
    "categories": [
    	"Build and release"
    ],
    "links": {
        "getstarted": {
          "uri": "https://github.com/rbengtsson/appservices-start-stop"
        }
    },   
    "tags": [
        "azure",
        "appservices",
        "webapp",
        "website",
        "restart"
    ],  
    "content": {
        "details": {
          "path": "marketplace-info.md"
        }
    },
    "branding": {
        "color": "rgb(36, 43, 50)",
        "theme": "dark"
    },    
    "icons": {
        "default": "images/icon.png"
    },    
    "files": [
        {
          "path": "Stop/Stop.ps1"
        },
        {
          "path": "Stop/task.json"
        },
        {
          "path": "Stop/icon.png"
        },        
        {
          "path": "Start/Start.ps1"
        },
        {
          "path": "Start/task.json"
        },
        {
          "path": "Start/icon.png"
        }        
    ],
   "contributions": [
        {
          "id": "Stop",
          "type": "ms.vss-distributed-task.task",
          "targets": [
            "ms.vss-distributed-task.tasks"
          ],
          "properties": {
            "name": "Stop"
          }
        },
        {
          "id": "Start",
          "type": "ms.vss-distributed-task.task",
          "targets": [
            "ms.vss-distributed-task.tasks"
          ],
          "properties": {
            "name": "Start"
          }
        }
    ]   
}